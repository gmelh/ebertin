<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Ebertin.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        
        <!-- Custom styles for menus -->
        <Style Selector="MenuItem /template/ Popup#PART_Popup > Border">
            <Setter Property="Background" Value="#2C3A42"/>
            <Setter Property="BorderBrush" Value="#1A2329"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style Selector="MenuFlyoutPresenter">
            <Setter Property="Background" Value="#2C3A42"/>
            <Setter Property="BorderBrush" Value="#1A2329"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Override the default menu item popup background -->
        <Style Selector="MenuItem /template/ Border#root">
            <Setter Property="Background" Value="#2C3A42"/>
        </Style>
    </Application.Styles>
</Application>